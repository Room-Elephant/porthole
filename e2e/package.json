{
  "name": "porthole-e2e",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
    "build:image": "docker build -f ../dev/Dockerfile -t porthole:latest ..",
    "env:up": "docker compose -f docker-compose.e2e.yml up -d --wait",
    "env:down": "docker compose -f docker-compose.e2e.yml down",
    "e2e": "npm run build:image && npm run env:up && npm run test; npm run env:down",
    "e2e:headed": "npm run build:image && npm run env:up && npm run test:headed; npm run env:down",
    "e2e:ui": "npm run build:image && npm run env:up && npm run test:ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@types/node": "^22.10.2"
  }
}

